

<h1><%= t (".libros") %></h1>

<br>


<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
<tr>
<th><%= t (".idlibros") %></th>
<th><%= t (".titulo") %></th>
<th><%= t (".autor") %></th>
<th><%= t (".isbn") %></th>
<th><%= t (".editorial") %></th>
<th><%= t (".publicado") %></th>
<% if current_user.present? && current_user.authorized? %> 
  <th colspan="3"></th>
<% end %>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
  <tr>
  <td><%= book.id %></td>
  <td><%= book.title %></td>
  <td><%= book.author %></td>
  <td><%= book.isbn %></td>
  <td><%= book.editorial %></td>
  <td><%= book.published_at %></td>

  <% if current_user.present? && current_user.authorized? %>      
        <td><%= link_to (t (".ver")), book, class:"btn btn-outline-primary" %></td>
        <td><%= link_to (t (".editar")), edit_book_path(book), class:"btn btn-outline-primary" %></td>
        <td><%= link_to (t (".borrar")), book, class:'btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
      </tr>
<% end %>
</tbody>
</table>
<br>
<% if current_user.present? && (current_user.admin? || current_user.is_biblio?) %>
  <%= link_to (t (".nuevo")), new_book_path, class:"btn btn-secondary" %>
<% end %>
<br>
<br>
<% if current_user %>
    <%= current_user.email %>
<% end %>